<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010336"
    tools:context="com.example.android.RPSLS.MainActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shpock"
        android:scaleType="fitEnd"
    />
    <!--********PLAYER Section*********-->
    <TextView
        android:id="@+id/gameNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game#1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:fontFamily="@string/font"
    />
    <TextView
        android:id="@+id/Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@id/gameNumber"
        android:layout_marginLeft="@dimen/marginPlayer"
        android:fontFamily="@string/font"
    />
    <TextView
        android:id="@+id/scorePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/scoreSize"
        android:layout_below="@id/Player"
        android:layout_marginLeft="@dimen/marginScore"
        android:fontFamily="@string/font"
    />
    <TextView
        android:id="@+id/figurePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/figure"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/txtPlayer"
        android:layout_below="@id/scorePlayer"
        android:layout_marginLeft="@dimen/marginPlayer"
        android:fontFamily="@string/font"
        />
<!-- **********PC  Section************-->
    <TextView
        android:id="@+id/PC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PC"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_below="@id/gameNumber"
        android:layout_marginRight="@dimen/marginPlayer"
        android:textSize="@dimen/txtPlayer"
        android:fontFamily="@string/font"
    />
    <TextView
        android:id="@+id/scorePC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="@dimen/scoreSize"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_below="@id/PC"
        android:layout_marginRight="@dimen/marginScore"
        android:fontFamily="@string/font"
    />
    <TextView
        android:id="@+id/figurePC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="figure"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_below="@id/scorePC"
        android:textSize="@dimen/txtPlayer"
        android:layout_marginRight="@dimen/marginPlayer"
        android:fontFamily="@string/font"
    />
<!-- **********EXPLANATION************-->
    <TextView
        android:id="@+id/resultBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIN/LOSE"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:fontFamily="@string/font"
    />
    <TextView
        android:id="@+id/whatHappened"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lizard poisons Spock"
        android:textColor="#FFFFFF"
        android:layout_below="@id/gameNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@string/font"
    />
<!-- **********BUTTONS  Section************-->
    <Button
        android:id="@+id/lizard"
        android:layout_width="@dimen/buttonRound"
        android:layout_height="@dimen/buttonRound"
        android:onClick="lizard"

        android:background="@drawable/round_button"
        android:layout_marginBottom="132dp"
        android:layout_marginLeft="80dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
    />
    <Button
        android:id="@+id/spock"
        android:layout_width="@dimen/buttonRound"
        android:layout_height="@dimen/buttonRound"
        android:onClick="spock"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="190dp"
    />
    <Button
        android:id="@+id/scissors"
        android:layout_width="@dimen/buttonRound"
        android:layout_height="@dimen/buttonRound"
        android:onClick="scissors"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="130dp"
    />
    <Button
        android:id="@+id/paper"
        android:layout_width="@dimen/buttonRound"
        android:layout_height="@dimen/buttonRound"
        android:onClick="paper"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="20dp"
    />
    <Button
        android:id="@+id/rock"
        android:layout_width="@dimen/buttonRound"
        android:layout_height="@dimen/buttonRound"
        android:onClick="rock"
        android:background="@drawable/round_button"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="20dp"
    />
</RelativeLayout>
